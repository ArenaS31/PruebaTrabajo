@model Prueba.Models.Marcas

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar marca</h2>

<h3>¿Estás seguro de esto?</h3>
<div>
    <hr />
    <!-- Muestra los errores de la validacion del formulario -->
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>
            Nombre de la marca :
        </dt>
        <dd>
            <!-- Nombre de la marca -->
            @Html.DisplayFor(model => model.Nombre_Marca)
        </dd>

        <dt>
            Representante :
        </dt>
        <dd>
            <!-- Nombre del representante -->
            @Html.DisplayFor(model => model.Representante)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {  //Inicia formulario html
        @Html.AntiForgeryToken() //Token de antifalsificación

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Cancelar", "Index")
        </div>
    }
</div>

